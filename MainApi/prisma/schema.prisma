// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model SystemInfo {
  id                 Int      @id
  trend_refresh_time DateTime
}

model User {
  id             String           @id @default(uuid())
  email          String           @unique
  name           String
  password       String
  CompareHistory CompareHistory[]
}

model Stock {
  id                     Int                      @id
  name                   String                   @unique
  image                  String
  ticker                 String
  future_price           Float
  CompareHistoryRelation CompareHistoryRelation[]
}

model CompareHistoryRelation {
  id                String         @id @default(uuid())
  compareHistory_id String
  compareHistory    CompareHistory @relation(fields: [compareHistory_id], references: [id])
  stock_id          Int
  stock             Stock          @relation(fields: [stock_id], references: [id])
}

model CompareHistory {
  id                     String                   @id @default(uuid())
  stock_id               String
  user                   User                     @relation(fields: [userId], references: [id])
  createdAt              DateTime                 @default(now())
  userId                 String
  CompareHistoryRelation CompareHistoryRelation[]
}
